@model User
@{
    ViewData["Title"] = "CreateUser";
}

<h1>CreateUser</h1>

<partial name="_SharedNotification"/>

<form method="post">
    <div class="border p-3 mt-4">
        
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/> <! the hr tag is a line across the parent element>
        </div>

        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" class="form-control"></input>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" class="form-control"></input>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword">Password Confirm</label>
            <input type="password" asp-for="ConfirmPassword" class="form-control"></input>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        @*change view redirect in controller*@
        
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to Home
        </a>
    </div>
</form>

@*this enables client side validation rather than going to the server to validate*@
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}