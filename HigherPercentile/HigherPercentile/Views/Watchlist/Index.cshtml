@model Watchlist
@{
    List<Stock>? watchList = ViewData["watchlist"] as List<Stock>;
    User? user = ViewData["user"] as User;
    
}

<partial name="_SharedNotification"/>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@user.Username's Watchlist</h2>
        </div>
    </div>
    <br></br>
<table class="table table-bordered table-striped" style="width=100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Symbol
            </th>
            <th>
                Momentum Percentage
            </th>
            <th>
                One Month Return
            </th>
            <th>
                Three Month Return
            </th>
            <th>
                Six Month Return
            </th>
            <th>
                One Year Return
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(Stock n in watchList)
        {  
            <tr>
               <td width="14%">
                    @n.Name
                </td>
                <td width="14%">
                    @n.Symbol
                </td>
                <td width="14%">
                    @n.MomentumTotal%
                </td>
                <td width="14%">
                    @n.OneMonthReturn%
                </td>
                <td width="14%">
                    @n.ThreeMonthReturn%
                </td>
                <td width="14%">
                    @n.SixMonthReturn%
                </td>
                <td width="14%">
                    @n.OneYearReturn%
                </td>
                 <td>
                    <div class="w-75 btn-group" role="group">
                        <form method="post" asp-action="Delete">
                            <input type="hidden" asp-for="UserId" value="@user.Id"></input>
                            <input type="hidden" asp-for="StockId" value="@n.Id"></input>
                            <input type="hidden" asp-for="Id" value="0"></input>

                            <button type="submit" class="btn btn-danger mx-2">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>